<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Global Itinerary Planner</title>
    <link rel="stylesheet" href="/assets/styles.css">
</head>
<body>
    <div class="container">
        <!-- Top section with title -->
        <header class="header">
            <h1 class="main-title">Global Itinerary Planner</h1>
            <p class="subtitle">Explore the world, one destination at a time</p>
        </header>

        <!-- Center globe section -->
        <main class="globe-section">
            <div class="globe-container">
                <div class="globe">
                    <div class="globe-sphere">
                        <div class="globe-image-container">
                            <img src="/assets/globe.gif" alt="3D Rotating Earth" class="globe-image">
                        </div>
                    </div>
                </div>
                <button class="get-started-btn" id="getStartedBtn">Get Started</button>
            </div>
        </main>

        <!-- Animated plane -->
        <div class="plane-container" id="planeContainer">
            <div class="plane" id="plane">
                ✈️
            </div>
        </div>

        <!-- World monuments around the borders -->
        <div class="monuments-container">
            <!-- Left monuments -->
            <div class="left-monuments">
                <div class="monument left-1">
                    <img src="https://images.unsplash.com/photo-1548013146-72492268e740?w=200&h=150&fit=crop" alt="Taj Mahal">
                    <span class="monument-name">Taj Mahal</span>
                </div>
                <div class="monument left-2">
                    <img src="https://images.unsplash.com/photo-1502602898534-8610c9d4a8a3?w=200&h=150&fit=crop" alt="Eiffel Tower">
                    <span class="monument-name">Eiffel Tower</span>
                </div>
                <div class="monument left-3">
                    <img src="https://images.unsplash.com/photo-1513635269975-59663e0ac1ad?w=200&h=150&fit=crop" alt="Big Ben">
                    <span class="monument-name">Big Ben</span>
                </div>
            </div>

            <!-- Right monuments -->
            <div class="right-monuments">
                <div class="monument right-1">
                    <img src="https://images.unsplash.com/photo-1501594907352-04cda38ebc29?w=200&h=150&fit=crop" alt="Statue of Liberty">
                    <span class="monument-name">Statue of Liberty</span>
                </div>
                <div class="monument right-2">
                    <img src="https://images.unsplash.com/photo-1546445317-29d911b4c6c5?w=200&h=150&fit=crop" alt="Sydney Opera House">
                    <span class="monument-name">Sydney Opera House</span>
                </div>
                <div class="monument right-3">
                    <img src="https://images.unsplash.com/photo-1578662996442-48f60103fc96?w=200&h=150&fit=crop" alt="Christ the Redeemer">
                    <span class="monument-name">Christ the Redeemer</span>
                </div>
            </div>

            <!-- Bottom monuments -->
            <div class="bottom-monuments">
                <div class="monument bottom-1">
                    <img src="https://images.unsplash.com/photo-1552083375-1447ce886485?w=200&h=150&fit=crop" alt="Machu Picchu">
                    <span class="monument-name">Machu Picchu</span>
                </div>
                <div class="monument bottom-2">
                    <img src="https://images.unsplash.com/photo-1565967511849-76a60a516170?w=200&h=150&fit=crop" alt="Great Wall">
                    <span class="monument-name">Great Wall</span>
                </div>
                <div class="monument bottom-3">
                    <img src="https://images.unsplash.com/photo-1543857778-c4a1a3e0b2eb?w=200&h=150&fit=crop" alt="Pyramids">
                    <span class="monument-name">Pyramids</span>
                </div>
                <div class="monument bottom-4">
                    <img src="https://images.unsplash.com/photo-1528181304800-259b08848526?w=200&h=150&fit=crop" alt="Petra">
                    <span class="monument-name">Petra</span>
                </div>
            </div>
        </div>

        <!-- Floating particles for technical effect -->
        <div class="particles">
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
        </div>
    </div>

    <script src="/assets/scripts.js"></script>
</body>
</html>
